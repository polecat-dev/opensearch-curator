# Environment variables for development
# Copy this file to .env and customize for your local setup

# OpenSearch test server
# Default test-environments/compose/docker-compose.test.yml endpoint is HTTPS on 19200
TEST_ES_SERVER=https://localhost:19200

# Path to the root CA generated by scripts/generate_test_certs.py
TEST_ES_CA_CERT=certs/generated/ca/root-ca.pem

# Basic authentication for the secured test cluster
TEST_ES_USERNAME=admin
TEST_ES_PASSWORD=MyStrongPassword123!

# Password used by the OpenSearch container (matches TEST_ES_PASSWORD by default)
OPENSEARCH_INITIAL_ADMIN_PASSWORD=MyStrongPassword123!

# Password that protects the generated private keys & PKCS#12 bundle
OPENSEARCH_TEST_SSL_PASSWORD=curatorssl
